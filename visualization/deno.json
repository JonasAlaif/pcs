{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["dom", "deno.ns"],
    "strict": true
  },
  "tasks": {
    "start": "deno run --allow-net --allow-read server.ts",
    "build": "deno bundle script.ts script.js",
    "dev": "deno run --allow-net --allow-read --allow-run --watch server.ts"
  }
}
